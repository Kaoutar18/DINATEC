{% extends 'base.html.twig' %}

{% block title %}À propos !{% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}

    <section class="contact_section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 px-0">
                    <div class="img-box">
                        <img src="images/sec.png" class="box_img" alt="about img">
                    </div>
                </div>
                <div class="col-md-6 mx-auto">
                    <div class="form_container">
                        <div class="heading_container heading_center">
                            <h2>Contact</h2>
                        </div>
                        {{ form_start(form) }}
                        <div class="form-row">
                            <div class="form-group col">
                                {{ form_row(form.nom, {'attr': {'placeholder': 'Nom', 'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-lg-6">
                                {{ form_row(form.numero, {'attr': {'placeholder': 'Numéro', 'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col">
                                {{ form_row(form.mail, {'attr': {'placeholder': 'Email', 'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col">
                                {{ form_row(form.message, {'attr': {'placeholder': 'Message', 'class': 'form-control', 'rows': 4}}) }}
                            </div>
                        </div>
                        <div class="btn_box">
                            <button type="submit" class="btn btn-primary">Envoyer</button>
                        </div>
                        {{ form_end(form) }}

                        {% for flashMessage in app.flashes('success') %}
                            <div class="alert alert-success">{{ flashMessage }}</div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% block footer %}
        {{ parent() }}
    {% endblock %}

{% endblock %}
